<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    tools:context="com.hoga.tugas5.HalamanProfil">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/profi1l"/>

    <RelativeLayout
        android:layout_below="@+id/img"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM : "/>
        <TextView
            android:id="@+id/tvNim"
            android:layout_toRightOf="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/nama"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama : "/>
        <TextView
            android:id="@+id/tvNama"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/nim"
            android:layout_toRightOf="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tlp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telphon : "/>
        <TextView
            android:id="@+id/tvTlp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/nama"
            android:layout_toRightOf="@+id/tlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kampus"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kampus : "/>
        <TextView
            android:id="@+id/tvKampus"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tlp"
            android:layout_toRightOf="@+id/kampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>